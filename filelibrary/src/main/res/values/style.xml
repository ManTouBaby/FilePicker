<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FunCameraTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/FunCameraAnimationStyle</item>
    </style>
    <!-- 默认Activity跳转动画 -->
    <style name="FunCameraAnimationStyle" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/fun_camera_activity_up_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fun_camera_activity_up_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/fun_camera_activity_down_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fun_camera_activity_down_out</item>
    </style>

    <dimen name="status_bar_height">24dp</dimen>

    <style name="popup_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_enter</item>
        <item name="android:windowExitAnimation">@anim/pop_out</item>
    </style>

    <declare-styleable name="CaptureButton">
        <!--外圆颜色-->
        <attr name="outCircleColor" format="color"/>
        <!--内圆颜色-->
        <attr name="innerCircleColor" format="color"/>
        <!--进度条颜色-->
        <attr name="progressColor" format="color"/>
        <!--录制时间-->
        <attr name="maxSeconds" format="integer"/>
    </declare-styleable>



    <declare-styleable name="WaveView">
        <attr name="waveColor" format="color"/>
        <attr name="baselineColor" format="color"/>
        <attr name="maxValue" format="integer"/>
        <attr name="waveStokeWidth" format="dimension"/>
        <attr name="invalidateTime" format="integer"/>
        <attr name="space" format="dimension"/>
    </declare-styleable>
</resources>
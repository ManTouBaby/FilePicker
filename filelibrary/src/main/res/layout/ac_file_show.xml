<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mt_common_bg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mt_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/mt_white_bg"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/mi_iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:scaleType="center"
            android:src="@mipmap/icon_black_back" />

        <TextView
            android:id="@+id/mt_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="文件选择"
            android:textColor="@color/mt_text_black"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/mt_complete_btn"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/icon_complete_corner"
            android:enabled="false"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="发送"
            android:textColor="@color/mt_text_white"
            android:textSize="12sp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/f_holder"
        android:layout_width="match_parent"
        android:layout_below="@+id/mt_toolbar_container"
        android:layout_height="match_parent"
        android:background="@color/mt_white_bg" />


</RelativeLayout>